<%= form_with(model: video) do |form| %>
  <% if video.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible fade show" role="alert">
      <h2><%= pluralize(video.errors.count, "error") %> erros encontrados:</h2>

      <ul>
        <% video.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.file_field :video_file %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.collection_check_boxes(:category_ids, Category.all, :id, :title, { prompt: 'None'}, { multiple: true}) %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
