<div class="container" style="margin-top:35px;">
  <h2>Meus Favoritos</h2>
  <hr>
  <% if @bookmarks.empty? %>
    <p>Não foi encontrado vídeos deste conteúdo.</p>
  <% else %>
    <% @bookmarks.each do |result| %>
      
      <p class="h4 marginbottom-fix" style="margin-bottom:-10px;"><%= link_to result.title, result %></p><br>
      <% result.categories.each do |cat| %>
        <span class=" inline-flex mr-2 items-center px-2  text-black ml-2 font-weight-bold text-uppercase" style="opacity: 0.6"><%= cat.title %></span>
      <% end %>
      <p class="mt-2"><%= result.description %></p>
      <hr>

    <% end %>
  <% end %>
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @bookmarks %>
  </div>
</div>