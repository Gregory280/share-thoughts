                                <div class="row">
                                    <div class="col-4">
                                        <div class="mt-3">
                                            <h4><%= teacher.videos.count %></h4>
                                            <p class="mb-0 text-muted">VÃ­deos</p>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="mt-3">
                                            <h4>6952</h4>
                                            <p class="mb-0 text-muted">Posts</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
          </div>
      </div>
  </div>
</div>
<div class="d-flex justify-content-center mt-4">
    <%= paginate @teachers %>
</div>
