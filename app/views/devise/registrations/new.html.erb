<div class="container" style="margin-top:30px">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="card">
    <div class="card-header bg-gray text-white">
      <h3>Criar conta</h3>
    </div>
    <div class="card-body">
      <div class="form-row">
        <div class="col">
          <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                 placeholder: 'Seu melhor e-mail', class: 'form-control' %>
          </div>
        </div>
        <div class="col">
          <div class="field form-group">
            <%= f.label :username, 'Usuário' %><br />
            <%= f.text_field :username, placeholder: 'Deve ser único', class: 'form-control' %>
          </div>
        </div>
        <div class="col">
          <div class="field form-group">
            <%= f.label :name, 'Nome' %><br />
            <%= f.text_field :name, placeholder: 'Seu nome completo', class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="field form-group">
            <%= f.label :about, 'Sobre você' %><em> (Campo opcional - Máximo 600 caracters)</em>
            <%= f.text_area :about, placeholder: 'Por que está estudando inglês ?' , class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="field form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(Mínimo <%= @minimum_password_length %> digitos)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          </div>
        </div>
        <div class="col">
          <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "Cadastrar", class: 'btn bg-gray text-white' %>
      </div>
    </div>
  </div>
<% end %>
</div>

