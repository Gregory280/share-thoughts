<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="card">
    <div class="card-header">
      <h3>Editar Perfil</h3>
    </div>
    <div class="card-body">
      
      <div class="row">
        
        <div class="col">
          <div class="field form-group">
            <%= f.label :username, 'Usuário'  %><i> (seu nome de usuário é único)</i><br/>
            <%= f.text_field :username, class: "form-control" %>
          </div>
        </div>

        <div class="col">
          <div class="field form-group">
            <%= f.label :name, 'Seu nome' %><br/>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

      </div>

      <div class="row">

        <div class="col">
          <div class="field form-group">
            <%= f.label :password, 'Senha' %> <i>(deixe em branco se não for mudar a senha)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Mínimo de 6 digitos" %>
          </div>
        </div>

        <div class="col">
          <div class="field form-group">
            <%= f.label :password_confirmation, 'Confirmação de senha' %><br />
            <%= f.password_field :password_confirmation,
                autocomplete: "new-password", class: "form-control", placeholder: "Mínimo de 6 digitos" %>
          </div>
        </div>

      </div>

      <div class="row">
        <div class="col">
          <div class="field form-group">
            <%= f.label :about, 'Sobre você' %><em> (Campo opcional - Máximo 600 caracters)</em><br/>
            <%= f.text_area :about, class: "form-control" %>
          </div>
        </div>
      </div>

      <br/>
      <div class="field form-group">
        <%= f.label :current_password, 'Senha Atual' %><i> (digite sua senha atual para confirmar mudanças no perfil)</i><br/>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Confirmar", class: "btn btn-success mt-2" %>
      </div>
    <% end %>
    </div>
  </div>
  <br/>
  <div class="card">
  <div class="card-header">
    <h3>Cancelar conta</h3>
  </div>
  <div class="card-body">
    <h5 class="card-title"> Uhnappy? </h5><br/>
    <%= button_to "Excluir minha conta", registration_path(resource_name),
      data: { confirm: "Tem certeza?" }, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
