<%= turbo_stream_from comment %>
<%= turbo_frame_tag comment do %>
<div class="">
  <div class="d-flex justify-content-between mb-1">
    <div>
      <span class="badge rounded-pill bg-dark text-white px-2 py-2">
        <i class="fas fa-user"></i> <span class="ml-1"><%= comment.user.username %></span>
      </span>
      <small style="opacity: 0.5"><%= comment.created_at.to_date %></small>
    </div>
    <% if false%>
    
      <% if current_user == comment.user %>
      <div class="d-flex">
        <%= link_to "Edit", edit_comment_path(comment), class: "mr-2" %>
        <%= link_to "Delete", comment_path(comment), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
      <% end %>
    
    <% end %>
  </div>

  <%= comment.body %>
 
</div>
<% end %>